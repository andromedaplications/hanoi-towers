<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Nasil_oynanir"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:divider="@android:drawable/divider_horizontal_textfield"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical">


    <ImageView
        android:id="@+id/Konsol"
        android:layout_width="251dp"
        android:layout_height="0dp"
        android:layout_marginBottom="130dp"
        android:background="#FFFFFF"
        android:contentDescription="TODO"
        android:gravity="center_horizontal"
        android:src="@drawable/nasil_oynanir"
        app:layout_constraintBottom_toTopOf="@+id/Adim2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Nasıl Oynanır ?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F7BA37"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Adim1"
        app:layout_constraintStart_toStartOf="@+id/Konsol" />

    <TextView
        android:id="@+id/Adim1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="I Bir defada yalnız bir disk hareket ettirilebilir."
        android:textColor="#535353"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/Adim2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Adim2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="68dp"
        android:text="II Tüm diskleri diğer kulelere taşıyın."
        android:textColor="#535353"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/Adim4"
        app:layout_constraintStart_toStartOf="@+id/Adim1"
        app:layout_constraintTop_toBottomOf="@+id/Konsol" />

    <TextView
        android:id="@+id/Adim3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="III Diskler kendilerinden daha küçük olanın üzerine konulamaz."
        android:textColor="#535353"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/Adim4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Adim2"
        app:layout_constraintVertical_bias="0.275" />

    <TextView
        android:id="@+id/Adim4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:text="IV En az hareketle oyunu bitiren kazanır."
        android:textColor="#535353"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Adim2" />


</androidx.constraintlayout.widget.ConstraintLayout>