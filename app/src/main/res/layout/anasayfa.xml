<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_a"
    android:clickable="true">

    <Button
        android:id="@+id/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/buton_nasil_oynanir"
        android:onClick="instruct"
        android:text="Nasıl oynanır"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/easy"
        android:layout_width="225dp"
        android:layout_height="51dp"
        android:layout_above="@+id/medium"
        android:layout_alignLeft="@+id/medium"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buton_yeni"
        android:onClick="game"
        android:text="Yeni oyun"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medium"
        android:layout_alignLeft="@+id/medium"
        android:layout_marginTop="15dp"
        android:background="@drawable/buton_cikis"
        android:onClick="exit"
        android:text="Çıkış"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/bilgi"
        android:clickable="true"
        android:fontFamily="cursive"
        android:onClick="info"
        android:text="i"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

</RelativeLayout>